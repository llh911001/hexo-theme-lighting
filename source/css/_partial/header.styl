#header
  background-color: #3fb0e7
  color: #333
  display: table
  height: 100%
  text-align: center
  width: 100%
  transition: height 0.25s
  position: relative
  overflow: hidden
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
  &:after
    bottom: 0
  &.small
    height:10%
    background-color: #fff

#header-inner
  position: fixed
  text-align: center
  width: 100%
  height: 50px
  background:#fff
  transition: opacity 0.25s
  z-index: 99999
  top: 0
  &.active
    opacity: .9
  .title
    font-weight: bold
    padding-top:20px
    opacity: 0
    @media mq-mobile
      opacity: 1
    h1
      display: none
      font-size: 1rem
      line-height: 3rem
      @media mq-mobile
        color: #fff


$logo-text
  text-decoration: none
  color: #fff
  font-weight: 300

#main-nav
  position: fixed
  left: 27px
  top: 20px

#main-nav-toggle
  .bar
    width: 14px
    height: 2px
    position: absolute
    background: #2E3434
    transition: all .3s linear
    &:nth-child(1)
      top: 0
      &.active
        top: 4px
        transform: rotate(45deg)
    &:nth-child(2)
      top: 4px
      &.active
        opacity: 0
    &:nth-child(3)
      top: 8px
      &.active
        top: 4px
        transform: rotate(-45deg)

#sub-nav
  position: fixed
  top: 0
  right: 42px

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: fixed
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 50px
  @media mq-mobile
    width: 80%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777

.mountains
  position: absolute
  bottom: -120px
  right: 0px
  @media mq-mobile
    display: none

$cloud
  background-image: url("/css/images/cloud.png")
  background-size: cover
  position: absolute

$sun
  background-image: url("/css/images/sun.png")
  background-size: cover
  position: absolute
  animation: 10s sun infinite linear

#cloud-1
  @extend $cloud
  width:80px
  height:70px
  bottom:300px
  right:-200px
  animation: 10s cloud-right infinite linear

#cloud-2
  @extend $cloud
  width:80px
  height:70px
  bottom:200px
  right:-200px
  animation: 5s cloud-right infinite linear

#cloud-3
  @extend $cloud
  width:80px
  height:70px
  bottom:400px
  left:-200px
  animation: 10s cloud-left infinite linear

#cloud-4
  @extend $cloud
  width:80px
  height:80px
  bottom:100px
  animation: 5s cloud-middle infinite ease-in-out alternate

.cloud
  @media mq-mobile
    display:none

#sun
  @extend $sun
  width:80px
  height:80px
  top: 10px
  left: 50px
  z-index: 100000

@keyframes cloud-middle
  from{
    right: 200px
  }
  to {
    right: 800px
  }

@keyframes cloud-left
  from{
    opacity: 0
    left: -100px
  }
  to {
    opacity: 1
    left: 1800px
  }

@keyframes cloud-right
  from{
    opacity: 0
    right: -100px
  }
  to {
    opacity: 1
    right: 1800px
  }

$keyframe-name-2 = sun
@keyframes {$keyframe-name-2}
  to {
    transform: rotate(1turn);
  }
